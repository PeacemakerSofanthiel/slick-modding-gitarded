<?xml version="1.0" encoding="utf-8"?>
<LocalizationInfo xmlns:xsd="http://www.w3.org/2001/XMLSchema" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
  <LocalizationFile>
  	<DefaultLanguage>en</DefaultLanguage>
		<BattleCardAbilityInfo Exist="true">
			<Path>\Localize\en\BattleCardAbilities</Path>
		</BattleCardAbilityInfo>
		<BattleCardNameInfo Exist="true">
			<Path>\Localize\{0}\BattlesCards</Path>
		</BattleCardNameInfo>
		<BattleDialogInfo Exist="true">
			<Path>\Localize\{0}\BattleDialogues</Path>
		</BattleDialogInfo>
		<BattleEffectTextInfo Exist="true">
			<Path>\Localize\{0}\EffectTexts</Path>
		</BattleEffectTextInfo>
		<BookDescInfo Exist="true">
			<Path>\Localize\{0}\Books</Path>
		</BookDescInfo>
		<CharacterNameInfo Exist="true">
			<Path>\Localize\{0}\CharactersName</Path>
		</CharacterNameInfo>
		<DropbookNameInfo Exist="true">
			<Path>\Localize\{0}\Dropbooks</Path>
		</DropbookNameInfo>
		<PassiveDescInfo Exist="true">
			<Path>\Localize\{0}\PassiveDesc</Path>
		</PassiveDescInfo>
		<StageNameInfo Exist="true">
			<Path>\Localize\{0}\StageName</Path>
		</StageNameInfo>
		<StoryInfo Exist="true">
<!-- {0} => language, {1} => file reference 
example here:
<Story Condition="Start">BongBong_1_start.xml</Story> leads to the files
- ModFolder\Data\StoryText\en_BongBong_1_start.xml 
  (if jp then to ModFolder\Data\StoryText\jp_BongBong_1_start.xml, etc)
- ModFolder\Data\StoryEffect\BongBong_1_start.xml
-->
			<TextPath>Data\StoryText</TextPath>
			<TextFile>{0}_{1}</TextFile>
			<EffectPath>Data\StoryEffect</EffectPath>
			<EffectFile>{1}</EffectFile>
		</StoryInfo>
		<TextDataInfo Exist="true">
			<Path>\Localize\{0}\etc</Path>
		</TextDataInfo>
	</LocalizationFile>
	<ExtraFile>
		<EpisodeInfo Enable="true">
			<DefaultName>{0}</DefaultName>
			<EpisodeName>{1} : {2}</EpisodeName>
		</EpisodeInfo>
		<BufIconInfo Enable="true">
			<Path>\Resource\Icons</Path>
		</BufIconInfo>
		<StoryIconInfo Enable="true" IconPostfix="_Default" IconGlowPostfix="_Glow">
			<Path>\Resource\StoryIcons</Path>
		</StoryIconInfo>
	</ExtraFile>
</LocalizationInfo>